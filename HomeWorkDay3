    public Point(int x, int y) {
    }
}
//class polyline
package p2;

import java.util.ArrayList;
public class PolyLine {
    ArrayList<Point> points;


    public PolyLine() {
        points = new ArrayList<Point>();
    }

    public PolyLine(ArrayList<Point> points) {
        this.points = points;
    }

    public void appendPoints(int x, int y) {
        Point point = new Point(x, y);
        points.add(point);
    }

    public void appendPoints(Point p) {
        points.add(p);
    }

    public double getLength() {
        return points.size();
    }

    @Override
    public String toString() {
        String str = "";

        for (Point ele : points) {
            System.out.println(ele);
            str = str + ele.toString();
        }
        return str;

    }
}

//main of point
PolyLine

package p2;
import java.util.ArrayList;

public class Test_PolyLine {
    public static void main(String[] args) {
        PolyLine line = new PolyLine();
        line.appendPoints(new Point(18, 9));
        line.appendPoints(2, 41);
        line.appendPoints(36, 20);
        System.out.println(line);// call to String

    }
}

